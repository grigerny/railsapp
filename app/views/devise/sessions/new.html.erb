	<center><h2>Start a service or find a service near you.</h2></center>
<div class="span4 offset3">
<div class="signin">
	<div class="well">
<h2>Sign In</h2>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

  <div><%= f.text_field :name, :placeholder => "Username" %></div>

  <div><%= f.password_field :password, :placeholder => "Password" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> Remember me
  <% end -%>
<br><br>
  <div> <%= f.submit "Sign in" %></div>
<% end %>
</div>
<%= render "devise/shared/links" %>
</div>
</div>


