<!DOCTYPE html>
<html>
<head>
  <title>Railsapp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
	<div id="fb-root"></div>
	<script>(function(d, s, id) {
	  var js, fjs = d.getElementsByTagName(s)[0];
	  if (d.getElementById(id)) return;
	  js = d.createElement(s); js.id = id;
	  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=140012242803646";
	  fjs.parentNode.insertBefore(js, fjs);
	}(document, 'script', 'facebook-jssdk'));</script>
	
	<div class="container">
		<h2><center>ServiceCrunch</center></h2>
		
	<% if flash[:alert] or flash[:notice] %>
	<div id="notice" <% if flash[:alert] %>class="alert"<% end %>>
	<%= flash[:alert] || flash[:notice] %>
	</div>
	<% end %>
	
	<%= link_to 'Home', root_path %> |
	<% if user_signed_in? %>
	<i class="icon-user"></i>
	  <strong><%= current_user.name %></strong>
	  <%= link_to 'Edit profile', edit_user_registration_path %> |
	  <%= link_to "Logout", destroy_user_session_path, method: :delete %>
	<% else %>
	  <%= link_to "Sign up", new_user_registration_path %> |
	  <%= link_to "Login", new_user_session_path %>
	<% end %>
&nbsp
	<div class="fb-like" data-href="http://www.servicecrunch.com" data-send="false" data-layout="button_count" data-width="450" data-show-faces="false" data-font="verdana"></div>
	<div class="topline"></div>	
	
<%= yield %>
	<div>
	</div>



<div class="bottom">
</div>

</body>
</html>
