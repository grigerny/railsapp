<% @title = 'ServiceCrunch' %>
<div class="search">
<form class="well form-search">
	<b>Search:</b>
 <%= form_tag services_path, :method => 'get' do %>
	<%= text_field_tag :search, params[:search], :placeholder => "Landscaping...", :style => "width:80%;" %>
	<%= submit_tag "Search", :name => nil %>
<%end%>
</div>

<% @services.each do |service| %>  
    <p><%= link_to "#{service.title}", service %></p>
<% end %>
</form>

<div class="row">
<div class="span6">
	<div style="font-size: 14px;">
	  <i class="icon-bookmark	"></i> <b>Construction Services</b>
	</div>
<ol>	
<div style="font-size: 12px;">
<% Service.where(:category => "construction").each do |service| %>
<%= link_to service.title.capitalize, service %><br>
<% end %>
</div>
</ol>



<div style="font-size: 14px;">
  <i class="icon-bookmark"></i> <b>Pet Services</b>
</div>

<div style="font-size: 12px;">
<% Service.where(:category => "pet").each do |service| %>
<%= link_to service.title.capitalize, service %><br>
<% end %>
</div>



<br><br>

</div>
</div>

	
